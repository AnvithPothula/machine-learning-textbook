{
  "title": "K Selection Interactive Simulator",
  "description": "Interactive visualization showing how different k values affect KNN decision boundaries, predictions, and the bias-variance tradeoff",
  "creator": "Claude Code with microsim-generator skill",
  "date": "2025-12-29",
  "subject": ["machine learning", "k-nearest neighbors", "k selection", "decision boundaries", "voronoi diagrams", "bias-variance tradeoff"],
  "type": "Interactive Simulation",
  "format": "text/html",
  "language": "en-US",
  "rights": "CC BY-NC-SA 4.0",
  "educationalLevel": "Undergraduate",
  "learningResourceType": "simulation",
  "interactivityType": "active",
  "typicalLearningTime": "PT10M",
  "bloomLevel": "Analyze",
  "library": "p5.js",
  "controls": [
    {
      "type": "slider",
      "name": "kValue",
      "label": "k value",
      "min": 1,
      "max": 25,
      "default": 5,
      "step": 1
    },
    {
      "type": "checkbox",
      "name": "showVoronoi",
      "label": "Show Voronoi (k=1)",
      "default": false
    },
    {
      "type": "button",
      "name": "addNoise",
      "label": "Add Noise Point"
    },
    {
      "type": "button",
      "name": "reset",
      "label": "Reset Data"
    },
    {
      "type": "draggable",
      "name": "testPoint",
      "label": "Test Point (drag to move)"
    }
  ]
}
